<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/splash">
    <fragment
        android:id="@+id/login"
        android:name="com.example.a5imdb.view.fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >

        <action
            android:id="@+id/action_login_to_register2"
            app:destination="@id/register2" />
        <action
            android:id="@+id/action_login_to_search"
            app:destination="@id/search" />
    </fragment>
    <fragment
        android:id="@+id/splash"
        android:name="com.example.a5imdb.view.fragments.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splash_to_login3"
            app:destination="@id/login"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/register2"
        android:name="com.example.a5imdb.view.fragments.Register"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_register2_to_login"
            app:destination="@id/login" />
    </fragment>
    <fragment
        android:id="@+id/search"
        android:name="com.example.a5imdb.view.fragments.Search"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
</navigation>